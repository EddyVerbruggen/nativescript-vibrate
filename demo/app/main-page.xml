<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-vibrate">
  <StackLayout class="p-20">
    <Label text="Nativescript Vibrate" class="t-20 text-center c-black" textWrap="true"/>
    <Button tap="{{ basicVibrate }}" text="Basic vibrate" class="btn btn-primary" />
    <Button tap="{{ oneSecondVibrate }}" text="1000ms of Vibration" class="btn btn-primary" />
    <Button tap="{{ patternVibrate }}" text="Pattern Vibrate" class="btn btn-primary" />
    <Button tap="{{ cancelVibrate }}" text="Cancel Vibrate" class="btn btn-outline" />
    <Label text="{{ hasVibrator }}" class="t-18 text-center c-black" textWrap="true"/>
  </StackLayout>
</Page>